<window anim_hint="htranslate" style="black" theme="button">
  <button name="alarm:bg_button" style="none" x="0" y="0" w="100%" h="100%" />
  <image name="alarm:bg" image="alarm_clock_bg" x="c" y="30" w="270" h="270" >
    <image name="alarm:point" image="alarm_point" x="c" y="10" w="6" h="6" />
    <image name="alarm:am" image="alarm_am_select" x="c" y="55" w="40" h="30" clickable="true" />
    <image name="alarm:pm" image="alarm_pm_no_select" x="c" y="185" w="40" h="30" clickable="true" />
    <image name="alarm:hour_bg" image="alarm_no_select" x="60" y="m" w="60" h="60" clickable="false" >
      <alarm_text_selector options="1-12" visible_nr="1" name="alarm:hour" style="alarm_select" x="c" y="m" w="-12" h="48" text="1" />
    </image>
    <image name="alarm:minute_bg" image="alarm_selected" x="150" y="m" w="60" h="60" >
      <alarm_text_selector options="0-59" visible_nr="1" name="alarm:minute" style="alarm_select" x="c" y="m" w="-12" h="-12" text="0" />
    </image>
  </image>

  <button name="alarm:cancel" style="alarm_cancel" x="40" y="bottom" w="160" h="100"  />
  <button name="alarm:set" style="alarm_set" x="200" y="bottom" w="160" h="100" />
</window>