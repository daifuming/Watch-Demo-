<window  anim_hint="vtranslate" style="black" name="time_dial" >
    <button style="time_dial" x="0" y="0" w="100%" h="100%" enable_long_press="true" >
    <gusture name="clock_bg" x="0" y="0" w="100%" h="100%" >
        <circle_progress  mark="AQI" x="c" y="m" w="380" h="380" mark_local="true" line_width="10" start_angle="-70" end_angle="-30"
         animation="value(from=35, to=45, duration=3000, yoyo_times=0, easing=sin_inout)" />

        <circle_progress  mark="AQI" x="c" y="m" w="380" h="380" mark_local="true" line_width="10" start_angle="30" end_angle="70"
         animation="value(from=0, to=75, duration=3000, easing=sin_inout)" />

        <circle_progress  mark="AQI" x="c" y="m" w="380" h="380" mark_local="true" line_width="10" start_angle="210" end_angle="250"
         animation="value(from=0, to=75, duration=3000, easing=sin_inout)" />


        <circle_button name="open:sport" image="run_icon" x="c" y="240" w="80" h="80" >
            <image image="run_icon" />
        </circle_button>
        <circle_progress name="open:AQI" mark="AQI" x="c" y="80" w="80" h="80" 
         animation="value(from=0, to=45, duration=3000, easing=sin_inout)" />
        <health_circle name="open:health" x="80" y="m" w="80" h="80" width="10"
         animation="value_b(from=0, to=60, duration=3000, easing=sin_inout);value_m(from=0, to=40, duration=3000, easing=sin_inout);value_s(from=0, to=20, duration=3000, easing=sin_inout)" />
        <circle_button_with_progress name="open:music" image="music_icon" x="240" y="m" w="80" h="80" 
         animation="value(from=0, to=80, duration=3000, easing=sin_inout)" /> 
    </gusture>
    </button>
</window>