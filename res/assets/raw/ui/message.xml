<window anim_hint="top_to_bottom" style="black" >
  <button style="none" x="0" y="0" h="100%" w="100%" name="message_window" />
  <list_view x="c"  y="top" w="336" h="-50" item_height="220">
    <scroll_view name="view" x="0"  y="0" w="100%" h="100%">
      <list_item style="odd" children_layout="default(rows=1,cols=0)">
        <message_card x="c" y="m" w="100%" h="100%" message_icon="message_icon" app_name="消息" message="你好啊" />
      </list_item>
      <list_item style="even" children_layout="default(rows=1,cols=0)">
        <message_card x="c" y="m" w="100%" h="100%" message_icon="run_icon" app_name="运动" />
      </list_item>
      <list_item style="odd" children_layout="default(rows=1,cols=0)">
        <message_card x="c" y="m" w="100%" h="100%" message_icon="qingtian_48" app_name="天气" icon_color="#09F7F7" />
      </list_item>
      <list_item style="even" children_layout="default(rows=1,cols=0)">
        <message_card x="c" y="m" w="100%" h="100%" message_icon="run_icon" app_name="运动" />
      </list_item>
    </scroll_view>
    <scroll_bar_m name="bar" x="right" y="0" w="6" h="100%" value="0"/>
  </list_view>
</window>
