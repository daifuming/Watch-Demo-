        <hour_weather   />
    </view>

    <view x="0" y="0" w="100%" h="100%" children_layout="default(c=1,r=1,m=5)" >
      <button text="button" />
    </view>

    <view x="0" y="0" w="100%" h="100%" children_layout="default(c=2,r=2,m=5)" >
      <button text="button" />
